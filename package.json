{
  "name": "net-test-tool-pro",
  "version": "1.5.0",
  "description": "专业网络测试工具 - 集成HRUFT可靠UDP传输",
  "main": "main.js",
  "author": "NetTestTool Team",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build:assets && electron-builder",
    "build:assets": "node scripts/build-assets.js",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -wl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "setup:hruft": "node scripts/setup-hruft.js",
    "setup:binaries": "node scripts/download-binaries.js",
    "test": "jest --verbose",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prebuild": "node scripts/pre-build-check.js"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "iconv-lite": "^0.7.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-notifier": "^10.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "app-builder-lib": "^26.0.12",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12",
    "electron-winstaller": "^5.4.0",
    "electron-devtools-installer": "^3.2.0",
    "node-gyp": "^10.2.0",
    "node-gyp-build": "^4.8.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "build": {
    "appId": "com.nettesttool.pro",
    "productName": "NetTestTool Pro",
    "directories": {
      "output": "app_file",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!bin/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!scripts/**/*",
      "!temp/**/*"
    ],
    "asarUnpack": [
      "node_modules/iconv-lite/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/${os}",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "./main.ico",
      "extraResources": [
        {
          "from": "bin/windows",
          "to": "bin",
          "filter": ["**/*"]
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        "portable"
      ],
      "legalTrademarks": "NetTestTool Pro",
      "fileAssociations": [
        {
          "ext": "ntt",
          "name": "NetTestTool Project",
          "description": "NetTestTool Project File",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NetTestTool Pro",
      "installerIcon": "./main.ico",
      "uninstallerIcon": "./main.ico"
    },
    "portable": {
      "artifactName": "NetTestToolPro-Portable.exe"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "extraResources": [
        {
          "from": "bin/mac",
          "to": "bin",
          "filter": ["**/*"]
        }
      ],
      "target": ["dmg", "zip"]
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "icon": "build/icons",
      "category": "Network",
      "maintainer": "NetTestTool Team <2013182991@qq.com>",
      "synopsis": "Professional Network Testing Tool",
      "description": "NetTestTool Pro is a comprehensive network testing tool with HRUFT reliable UDP transmission support.",
      "extraResources": [
        {
          "from": "bin/linux",
          "to": "bin",
          "filter": ["**/*"]
        }
      ],
      "target": ["AppImage", "deb", "rpm"]
    },
    "appImage": {
      "artifactName": "NetTestToolPro-${version}.${ext}"
    },
    "deb": {
      "depends": ["libgtk-3-0", "libnotify4", "libnss3", "libxss1", "libxtst6", "xdg-utils", "libatspi2.0-0", "libuuid1", "libappindicator3-1", "libsecret-1-0"]
    },
    "publish": {
      "provider": "github",
      "owner": "nettesttool",
      "repo": "NetTestTool-Pro"
    }
  }
}