{
  "name": "net-test-tool-pro",
  "version": "1.5.0",
  "description": "专业网络测试工具 - 集成HRUFT可靠UDP传输",
  "main": "main.js",
  "author": "NetTestTool Team",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build:assets && electron-builder",
    "build:assets": "node scripts/build-assets.js",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -wl",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "setup:hruft": "node scripts/setup-hruft.js",
    "test": "jest --verbose",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "iconv-lite": "^0.7.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-notifier": "^10.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "build": {
    "appId": "com.nettesttool.pro",
    "productName": "NetTestTool Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "bin/${os}",
        "to": "bin",
        "filter": ["**/*"]
      },
      {
        "from": "config",
        "to": "config"
      },
      {
        "from": "docs",
        "to": "docs"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        "portable"
      ],
      "icon": "build/icon.ico",
      "legalTrademarks": "NetTestTool Pro",
      "publisherName": "NetTestTool Team",
      "fileAssociations": [
        {
          "ext": "ntt",
          "name": "NetTestTool Project",
          "description": "NetTestTool Project File",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NetTestTool Pro",
      "installerIcon": "build/installer.ico",
      "uninstallerIcon": "build/uninstaller.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/uninstallerSidebar.bmp",
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "NetTestToolPro-Portable.exe"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Application需要访问摄像头以进行网络摄像头测试",
        "NSMicrophoneUsageDescription": "Application需要访问麦克风以进行音频测试"
      }
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm", "snap"],
      "icon": "build/icons",
      "category": "Network",
      "maintainer": "NetTestTool Team <support@nettesttool.com>",
      "synopsis": "Professional Network Testing Tool",
      "description": "NetTestTool Pro is a comprehensive network testing tool with HRUFT reliable UDP transmission support."
    },
    "appImage": {
      "artifactName": "NetTestToolPro-${version}.${ext}"
    },
    "deb": {
      "depends": ["libgtk-3-0", "libnotify4", "libnss3", "libxss1", "libxtst6", "xdg-utils", "libatspi2.0-0", "libuuid1", "libappindicator3-1", "libsecret-1-0"]
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "summary": "Professional Network Testing Tool",
      "description": "A comprehensive network testing tool with reliable UDP transmission support.",
      "plugs": ["network", "network-bind", "hardware-observe"]
    },
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "nettesttool",
      "repo": "NetTestTool-Pro"
    }
  }
}